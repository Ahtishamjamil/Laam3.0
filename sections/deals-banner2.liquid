<div class="laam-banner">
 {% for block in section.blocks %}

<div class="inner-banner">
                                            {% if block.settings.slideshow_link %}<a href="{{ block.settings.slideshow_link }}">{% endif %}
                                            <img src="{{ block.settings.slideshow_image | img_url: 'master' }}" alt="{{ block.settings.slideshow_image.alt }}">
                                          {% if block.settings.slideshow_link %}</a>{% endif %}
                                           
                                                                           
                        </div> 
                        <div class="mobile-view">
                        {% if block.settings.slideshow_link %}<a href="{{ block.settings.slideshow_link }}">{% endif %}
                                            <img src="{{ block.settings.mobile_slideshow_image | img_url: 'master' }}" alt="{{ block.settings.mobile_slideshow_image.alt }}">
                                          {% if block.settings.slideshow_link %}</a>{% endif %}
                        </div>      
                            {% endfor %}            
                                        </div>

<style>
  @media screen and (min-width: 768px) {  
    #flexslider-{{ section.id }} .banner h2 {
      font-size:{{section.settings.slider_heading_size}}px;
      color:{{ section.settings.sd_heading_color }};
    }
    #flexslider-{{ section.id }} .banner h4,  #flexslider-{{ section.id }} .banner h4 p {
      font-size:{{section.settings.slider_sub_heading_size | append: 'px'}};
    }

    #flexslider-{{ section.id }} .banner h5 p {
      font-size:{{section.settings.slider_content_size | append: 'px'}};
    }
    #flexslider-{{ section.id }} .banner p {
      font-size:{{section.settings.slider_content_size | append: 'px'}};
    }
   
  }
  #flexslider-{{ section.id }} .banner h2 {
    color:{{ section.settings.sd_heading_color }};
  }
  #flexslider-{{ section.id }} .banner .line_1 {
    background:{{ section.settings.sd_line_color }};
  }
  #flexslider-{{ section.id }} .banner h4 {
    color:{{ section.settings.sd_sub_heading_color }};
  }
  #flexslider-{{ section.id }} .banner h4 p {
    color:{{ section.settings.sd_sub_heading_color }};
  }
  #flexslider-{{ section.id }} .banner h5 p {
    color:{{ section.settings.sd_text_color }};
  }
  #flexslider-{{ section.id }} .banner p {
    color:{{ section.settings.sd_text_color }};
  }
</style>
<!--SLIDER END -->
{% schema %}
 {
    "name": "Deals  Banner",
    "max_blocks": 15,
    "settings": [
      {
        "type": "select",
        "id": "slideshow_width",
        "label": "Layout",
        "options": [
          {
            "value": "full",
            "label": "Full-width"
          },
          {
            "value": "contained",
            "label": "Contained"
          }
        ],
        "default": "full"
      },
	  {
        "type": "range",
        "id": "animation_speed",
        "label": "Change slides every",
          "min":       3,
        "max":        8,
        "step":       1,
        "unit":       "sec",
        "default": 7
      },
	  {
        "type": "range",
        "id": "slider_heading_size",
        "label": "Heading size",
        "default": 36,
        "min": 12,
        "max": 36,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "slider_sub_heading_size",
        "label": "Subheading size",
        "default": 24,
        "min": 12,
        "max": 36,
        "step": 1,
        "unit": "px"
      },
      {
        "type": "range",
        "id": "slider_content_size",
        "label": "Content size",
        "default": 18,
        "min": 12,
        "max": 36,
        "step": 1,
        "unit": "px"
      },
	  {
        "type": "header",
        "content": "Colors"
      },
	   {
        "type": "color",
        "id": "sd_heading_color",
        "label": "Heading text",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "sd_line_color",
        "label": "Separator",
        "default": "#fbcf00"
      },
      {
        "type": "color",
        "id": "sd_sub_heading_color",
        "label": "Subheading text",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "sd_text_color",
        "label": "Caption text",
        "default": "#ffffff"
      }
	],
     "blocks" : [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
      {
        "type": "header",
        "content": "Slide"
      },
      {
        "type": "image_picker",
        "id": "slideshow_image",
        "label": "Desktop Cover",
		    "info": "1600 x 700px jpg recommended"
      },
      {
        "type": "image_picker",
        "id": "mobile_slideshow_image",
        "label": "Mobile Cover",
		    "info": "1600 x 700px jpg recommended"
      },
      {
        "type": "range",
        "id": "slideshow_caption_val",
        "label": "Overlay opacity",
        "info": "Add a darkened overlay over your slide to make text easier to read.  Higher percentages produce darker overlays.",
          "min":       0,
        "max":        100,
        "step":       10,
        "unit":       "%",
        "default": 20
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "slideshow_subtitle",
        "label": "Subheading"
      },
      {
        "type": "richtext",
        "id": "slideshow_subsubtitle",
        "label": "Content"
      },
      {
        "type": "text",
        "id": "slideshow_button_text",
        "label": "Button text"
      },
      {
        "type": "url",
        "id": "slideshow_link",
        "label": "Slide link"
      },
      {
        "type": "select",
        "id": "slideshow_caption_position",
        "label": "Text position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      	}
	  ]
 	 }
	],
  "presets": [{
    "name": "Deals Banner",
    "category": "Image",
    "settings": {
    },
    "blocks": [
      {
        "type": "slide"
      },
      {
        "type": "slide"
      }
    ]
  }]
 }
{% endschema %}
