{% for block in section.blocks %}
    {% case block.type %}

    {% when 'laambanner' %}
        {% include 'laambanner' %}
    
    {% when 'slideshow' %}
        {% include 'slideshow' %}
    {% endcase %}

{% endfor %}
{% schema %}
{
    "name": "Luxury Pret Page",
    "blocks" : [
        {
        "type": "laambanner",
        "name": "Banner",
        "settings": [
        {
        "type": "header",
        "content": "Slide"
        },
        {
        "type": "image_picker",
        "id": "slideshow_image",
        "label": "Desktop Cover",
            "info": "1600 x 700px jpg recommended"
        },
        {
        "type": "image_picker",
        "id": "mobile_slideshow_image",
        "label": "Mobile Cover",
            "info": "1600 x 700px jpg recommended"
        },
        {
        "type": "text",
        "id": "title",
        "label": "Heading"
        },
        {
        "type": "richtext",
        "id": "slideshow_subtitle",
        "label": "Subheading"
        },
        {
        "type": "richtext",
        "id": "slideshow_subsubtitle",
        "label": "Content"
        },
        {
        "type": "text",
        "id": "slideshow_button_text",
        "label": "Button text"
        },
        {
        "type": "url",
        "id": "slideshow_link",
        "label": "Slide link"
        },
        {
        "type": "select",
        "id": "slideshow_caption_position",
        "label": "Text position",
        "options": [
            {
            "value": "left",
            "label": "Left"
            },
            {
            "value": "center",
            "label": "Center"
            },
            {
            "value": "right",
            "label": "Right"
            }
        ],
        "default": "center"
            }
        ]
    },
    {
        "type": "slideshow",
        "name": "Slideshow",
        "settings":[
        {
            "type": "header",
            "content": "Image"
          },
          {
            "type": "image_picker",
            "id": "slide_img",
            "label": "Desktop Banner"
          },   	
            {
            "type": "image_picker",
            "id": "mobile_slide_img",
            "label": "Mobile Banner"
          },
          {
            "type": "url",
            "id": "brand_link",
            "label": "Link"
          }
        ]
    }
    ]
}
{% endschema %}
